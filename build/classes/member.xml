<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberns">
	<select id="select" parameterType="string" resultType="member">
		select * from member2 where id=#{id}
	</select>
	
	<select id="getTotal" resultType="integer">
	select count(*) from member2
	</select>
	
	<select id="list" parameterType="map" resultType="member">
	select * from (select rowNum rn , a.* from (
		select * from member2 order by id ) a) 
			where rn between #{startRow} and #{endRow} 
	</select>
	
	<insert parameterType="member" id="insert">
	insert into member2 values (#{id},#{password},#{name},#{address},#{tel},sysdate,'n') 
	</insert>

	<update parameterType="member" id="update">
	update member2 set password=#{password},name=#{name},address=#{address},tel=#{tel} where id=#{id} 
	</update>
	
	<update parameterType="string" id="delete">update member2 set del='y' where id=#{id} </update>
	
	
</mapper>